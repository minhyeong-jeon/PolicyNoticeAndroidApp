<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="회원가입"
                android:fontFamily="@font/font_style"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:textColor="@color/black"
                        android:fontFamily="@font/font_style"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/join_id"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:hint="아이디를 입력하세요"
                            android:fontFamily="@font/font_style"
                            android:textSize="15dp"
                            android:singleLine="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/chekc_id_btn"
                            android:layout_marginLeft="10dp"
                            android:text="중복확인"
                            android:fontFamily="@font/font_style"
                            android:textSize="15dp"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white">

                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/check_id"
                android:textSize="12dp"
                android:text="아이디 중복확인을 해주세요"
                android:fontFamily="@font/font_style">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp"
                    android:text="PASSWORD"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_style"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    >


                    <EditText
                        android:id="@+id/join_pw"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:hint="비밀번호를 입력하세요"
                        android:textSize="15dp"
                        android:fontFamily="@font/font_style"
                        android:inputType="textPassword" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_style"
                android:textSize="12dp"
                android:id="@+id/check_pass">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="생애주기"
                android:textColor="@color/black"
                android:fontFamily="@font/font_style"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"/>

            <Spinner
                android:id="@+id/join_lifearray"
                android:entries = "@array/age_array"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:fontFamily="@font/font_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="가구유형"
                android:textColor="@color/black"
                android:fontFamily="@font/font_style"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>


            <Spinner
                android:id="@+id/join_trgterIndvdlArray"
                android:entries = "@array/gender_array"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:fontFamily="@font/font_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="지역"
                android:textColor="@color/black"
                android:fontFamily="@font/font_style"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>


            <Spinner
                android:id="@+id/join_area"
                android:entries = "@array/area_array"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:fontFamily="@font/font_style"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/join_savebtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="저장"
                android:fontFamily="@font/font_style"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="MyOnClick"
                android:background="@drawable/btn_round"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>