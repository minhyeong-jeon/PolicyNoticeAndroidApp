<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/event_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Event"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/eventDeleteBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/delete_favorite"
            android:layout_gravity="right"
            android:layout_margin="5dp" />
        <ImageButton
            android:id="@+id/eventEditBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/plus"
            android:layout_gravity="right"
            android:layout_margin="5dp" />
    </LinearLayout>

    <!-- <TextView
         android:id="@+id/eventDateTV"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:gravity="center"
         android:layout_marginStart="20dp"
         android:textSize="10sp"
         android:layout_marginTop="5dp"
         android:maxLines="1"
         android:textColor="@color/gray"
         android:text="detail"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/eventStartDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="startdate"
            android:textColor="@color/gray"
            android:textSize="10sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:maxLines="1"
            android:text="~"
            android:textColor="@color/gray"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/eventEndDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="enddate"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/eventDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:maxLines="1"
            android:text="date"
            android:textColor="@color/gray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/eventTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:maxLines="1"
            android:text="time"
            android:textColor="@color/gray"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>