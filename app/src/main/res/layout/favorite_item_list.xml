<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:id="@+id/cmdArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">


        <LinearLayout
            android:id="@+id/select_favorite_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/textView_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="이름"
                android:fontFamily="@font/font_style"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView_list_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="내용"
                android:textColor="@color/black"
                android:fontFamily="@font/font_style"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/deletebutton"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/delete_favorite"
                android:layout_marginTop="10dp"
                android:text="삭제"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/add_calender_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/date"
                android:layout_marginTop="15dp"
                android:text="삭제"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>