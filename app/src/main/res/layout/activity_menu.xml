<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/logo_back"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="#541975D2"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200sp"
                android:layout_margin="10sp"
                android:src="@drawable/logo_image"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:orientation="vertical"
            android:background="@drawable/calendar_main"
            android:layout_gravity="center_vertical|bottom"

            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:onClick="menu_search"
        android:background="@drawable/setting_edge"
        android:elevation="15sp">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/search_blue"
           />

        <TextView
            android:id="@+id/menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="검색"
            android:fontFamily="@font/font_style"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:onClick="menu_favorite"
        android:background="@drawable/setting_edge"
        android:elevation="15sp">

        <ImageView
            android:id="@+id/boomark_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/favorite_blue" />

        <TextView
            android:id="@+id/menu_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="35dp"
            android:text="즐겨찾기"
            android:fontFamily="@font/font_style"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/setting_edge"
        android:elevation="15sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:onClick="menu_calendar">

        <ImageView
            android:id="@+id/calendar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/calender_blue" />

        <TextView
            android:id="@+id/menu_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="캘린더"
            android:fontFamily="@font/font_style"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/setting_edge"
        android:elevation="15sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:onClick="menu_chatbot">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/chatbot_blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="문의"
            android:fontFamily="@font/font_style"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/setting_edge"
        android:elevation="15sp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:onClick="menu_setting">

        <ImageView
            android:id="@+id/setting_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/setting_blue" />

        <TextView
            android:id="@+id/meun_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_style"
            android:text="설정" />
    </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

