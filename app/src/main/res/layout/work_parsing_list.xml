<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83C5E1F3"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/select_work_item"

        >

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/font_style"
            >
        </TextView>
        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_text_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/font_style"
            >
        </TextView>



        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_text_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/font_style"
            android:textSize="13dp"
            >
        </TextView>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_text_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/font_style"
            >
        </TextView>

        <TextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:fontFamily="@font/font_style"
            >
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp">

        <Button
            android:id="@+id/add_work_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="즐겨찾기"
            android:fontFamily="@font/font_style"
            android:textSize="15dp"
            android:background="@drawable/btn_round"
            android:textColor="@color/white"
            android:layout_gravity="center"
            >
        </Button>
    </LinearLayout>

</LinearLayout>