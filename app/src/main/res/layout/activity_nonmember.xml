<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/main_layout_non"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chatbot_non"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:layout_gravity="right"
                android:src="@drawable/chatbot" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp"
                    >

                    <EditText
                        android:id="@+id/input_searchWrd_non"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="11dp"
                        android:background="@null"
                        android:hint="검색어"
                        android:fontFamily="@font/font_style"
                        android:textSize="20sp"
                        android:layout_weight="0.7"

                        />

                    <Spinner
                        android:id="@+id/check_search_non"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="10sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/font_style"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginRight="5sp">

                        <TextView
                            android:id="@+id/input_lifeArray_non"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="생애주기"
                            android:fontFamily="@font/font_style"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            />

                        <Spinner
                            android:id="@+id/check_life_non"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/font_style"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp">

                        <TextView
                            android:id="@+id/input_trgterIndvdlArray_non"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가구유형"
                            android:fontFamily="@font/font_style"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            />

                        <Spinner
                            android:id="@+id/check_trgterIndvdlArray_non"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/font_style"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="5sp">

                        <TextView
                            android:id="@+id/input_desireArray_non"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="관심주제"
                            android:fontFamily="@font/font_style"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center"
                            />

                        <Spinner
                            android:id="@+id/check_desireArray_non"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/font_style"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <Button
                    android:id="@+id/buttonAPI_List_non"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_round"
                    android:text="목록조회"
                    android:fontFamily="@font/font_style"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resetBtn_non"
                    android:background="@drawable/btn_round"
                    android:text="초기화"
                    android:fontFamily="@font/font_style"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:layout_marginLeft="20sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5">
                <ListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:dividerHeight="15px"
                    android:divider="#00000000"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/worknet_non"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자리 복지는?"
                android:layout_gravity="right"
                android:fontFamily="@font/font_style"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_non"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/backbtn_non"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/backbtn"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/servNm_non"
                    android:hint="서비스명"
                    android:layout_marginTop="4sp"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/font_style">

                </TextView>

            </LinearLayout>



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소관부처명 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/jurMnofNm_non"
                            android:hint="서비스명"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대상자 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tgtrDtlCn_non"
                            android:hint="서비스명"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="선정기준 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/slctCritCn_non"
                            android:hint="서비스명"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="급여서비스 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/alwServCn_non"
                            android:hint="서비스명"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가구유형 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:id="@+id/trgterIndvdlArray_non"
                            android:hint="서비스명">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20sp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="생애주기 : "
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:fontFamily="@font/font_style">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:id="@+id/lifeArray_non"
                            android:hint="서비스명"
                            android:fontFamily="@font/font_style">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>